<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <!-- Блок доходов -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Income"
                android:textColor="#121212"                android:textSize="18sp"
                android:layout_marginTop="30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="18dp">

                <ImageView
                    android:id="@+id/income_img"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/income"
                    android:layout_marginEnd="8dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/total_expenses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#121212"                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/income"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#121212"                        android:textSize="16sp"
                        android:layout_gravity="bottom"
                        />
                </LinearLayout>
            </LinearLayout>

            <!-- Блок счетов -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accounts"
                android:textColor="#121212"                android:textSize="18sp"
                android:layout_marginTop="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="18dp">

                    <ImageView
                        android:id="@+id/wallet"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/wallet"
                        android:contentDescription="Cash"/>

                    <TextView
                        android:id="@+id/wallet_cash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#121212"                        android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="18dp">

                    <ImageView
                        android:id="@+id/eWalletImg"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/card"
                        android:contentDescription="Card"/>

                    <TextView
                        android:id="@+id/eWallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#121212"                        android:textSize="16sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Блок расходов -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expenses"
                android:textColor="#121212"                android:textSize="18sp"
                android:layout_marginTop="16dp"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="18dp">

                    <ImageView
                        android:id="@+id/foodExpense"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/food"/>

                    <TextView
                        android:id="@+id/foodExpenseText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 Br"
                        android:textColor="#121212"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="18dp">

                    <ImageView
                        android:id="@+id/HouseExpense"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/house"/>

                    <TextView
                        android:id="@+id/HouseExpenseText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 Br"
                        android:textColor="#121212"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="18dp">

                    <ImageView
                        android:id="@+id/PocketExpense"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/pocket"/>

                    <TextView
                        android:id="@+id/PocketExpenseText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 Br"
                        android:textColor="#121212"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="18dp">

                    <ImageView
                        android:id="@+id/GroceriesExpense"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/groceries"/>

                    <TextView
                        android:id="@+id/GroceriesExpenseText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 Br"
                        android:textColor="#121212"/>
                </LinearLayout><LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="18dp">

                <ImageView
                    android:id="@+id/TransportExpense"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/transport"/>

                <TextView
                    android:id="@+id/TransportExpenseText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 Br"
                    android:textColor="#121212"/>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="18dp">

                    <ImageView
                        android:id="@+id/EntertainmentExpense"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/entertainment"/>

                    <TextView
                        android:id="@+id/EntertainmentExpenseText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 Br"
                        android:textColor="#121212"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="18dp">

                    <ImageView
                        android:id="@+id/CommunicationsExpense"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/communications"/>

                    <TextView
                        android:id="@+id/CommunicationsExpenseText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 Br"
                        android:textColor="#121212"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="18dp">

                    <ImageView
                        android:id="@+id/TravelExpense"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/travel"/>

                    <TextView
                        android:id="@+id/TravelExpenseText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 Br"
                        android:textColor="#121212"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="18dp">

                    <ImageView
                        android:id="@+id/ClothesExpense"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/clothes"/>

                    <TextView
                        android:id="@+id/ClothesExpenseText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 Br"
                        android:textColor="#121212"/>
                </LinearLayout>

            </GridLayout>
        </LinearLayout>

    </ScrollView>


</FrameLayout>